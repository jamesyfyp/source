{{!< default}}
{{!-- The tag above means: insert everything in this file into the body of the default.hbs template --}}

{{#post}}

<main class="min-h-screen bg-base-100 py-8">
  <div class="container mx-auto px-4">
    <article class="card bg-base-200 shadow-xl overflow-hidden {{post_class}}">
      {{#match @page.show_title_and_feature_image}}
        <header class="card-body text-center pt-8 pb-0 gh-article-header gh-canvas">
          <h1 class="text-4xl md:text-5xl font-black text-transparent bg-clip-text bg-gradient-to-r from-primary via-accent to-primary mb-4 gh-article-title is-title">{{title}}</h1>
          {{#if custom_excerpt}}
            <p class="text-lg text-base-content opacity-80 max-w-2xl mx-auto mb-6 gh-article-excerpt is-body">{{custom_excerpt}}</p>
          {{/if}}
          <div class="w-full rounded-t-box overflow-hidden">
            {{> "feature-image"}}
          </div>
        </header>
      {{/match}}
      <section class="card-body prose prose-lg max-w-none px-6 md:px-12 lg:px-24 [&_p]:py-4 [&_h3]:font-bold [&_h3]:text-2xl [&_h3]:text-transparent [&_h3]:bg-clip-text [&_h3]:bg-gradient-to-r [&_h3]:from-primary [&_h3]:via-accent [&_h3]:to-primary [&_h3]:no-underline">
        {{content}}
      </section>
    </article>
  </div>
</main>

{{/post}}