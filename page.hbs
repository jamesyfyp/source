{{!< default}}
{{!-- The tag above means: insert everything in this file into the body of the default.hbs template --}}

{{#post}}

<main class="min-h-screen bg-base-100 py-8 relative overflow-hidden">
  <div class="dither-bg"></div>
  <div class="relative z-10 container mx-auto px-4">
    <article class="card max-w-[1100px] bg-base-200 shadow-xl overflow-hidden {{post_class}}">
      {{#match @page.show_title_and_feature_image}}
        <header class="card-body text-center pt-8 pb-0 gh-article-header gh-canvas">
          <h1 class="text-4xl md:text-5xl font-black text-transparent bg-clip-text bg-gradient-to-r from-primary via-accent to-primary mb-4 gh-article-title is-title">{{title}}</h1>
          {{#if custom_excerpt}}
            <p class="text-lg text-base-content opacity-80 max-w-2xl mx-auto mb-6 gh-article-excerpt is-body">{{custom_excerpt}}</p>
          {{/if}}
          <div class="w-full rounded-t-box overflow-hidden">
            {{> "feature-image"}}
          </div>
        </header>
      {{/match}}
      <section class="card-body prose prose-lg max-w-none px-6 md:px-12 lg:px-24 relative">
        <div class="absolute inset-0 bg-[radial-gradient(#00000011_1px,transparent_1px)] [background-size:4px_4px] [mask-image:radial-gradient(ellipse_70%_50%_at_50%_50%,black,transparent)] translate-x-2 translate-y-2 -z-10"></div>
        <div class="relative z-10 [&_p]:py-4 [&_h3]:font-bold [&_h3]:text-2xl [&_h3]:text-transparent [&_h3]:bg-clip-text [&_h3]:bg-gradient-to-r [&_h3]:from-primary [&_h3]:via-accent [&_h3]:to-primary [&_h3]:no-underline">
          {{content}}
        </div>
      </section>
      <div class="card-footer bg-base-300 p-4 text-center">
        <div class="flex justify-center gap-4">
          <button class="btn btn-sm btn-primary">Share</button>
          <button class="btn btn-sm btn-outline">Comment</button>
        </div>
      </div>
    </article>
  </div>
</main>

{{/post}}

<script src="https://cdn.jsdelivr.net/npm/gsap@3"></script>
<script>
  gsap.to(".dither-bg", {
    backgroundPosition: '100px 100px',
    duration: 20,
    repeat: -1,
    ease: "linear"
  });
</script>