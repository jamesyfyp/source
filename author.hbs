{{!< default}}
{{!-- The tag above means: insert everything in this file into the body of the default.hbs template --}}

<main class="container mx-auto px-4 py-8 md:py-12">
  {{#author}}
    <section class="mb-12">
      <div class="flex flex-col md:flex-row items-center md:items-start gap-8">
        <!-- Author Profile Image -->
        <div class="order-1 md:order-2 md:w-1/3 flex justify-center">
          {{#if profile_image}}
            <div class="avatar">
              <div class="w-48 h-48 rounded-full ring ring-primary ring-offset-base-100 ring-offset-2 overflow-hidden">
                <img src="{{img_url profile_image size="m"}}" alt="{{name}}" class="object-cover" />
              </div>
            </div>
          {{else}}
            <div class="avatar placeholder">
              <div class="w-48 h-48 rounded-full bg-neutral-focus text-neutral-content ring ring-primary ring-offset-base-100 ring-offset-2">
                <span class="text-5xl">{{name.[0]}}</span>
              </div>
            </div>
          {{/if}}
        </div>

        <!-- Author Info -->
        <div class="order-2 md:order-1 md:w-2/3 text-center md:text-left">
          <h1 class="text-4xl md:text-5xl font-bold mb-4">
            {{#if website}}
              <a href="{{website}}" target="_blank" rel="noopener" class="link link-hover link-primary">{{name}}</a>
            {{else}}
              {{name}}
            {{/if}}
          </h1>

          {{#if bio}}
            <div class="text-lg mb-6 text-base-content/80">{{bio}}</div>
          {{/if}}

          <div class="flex flex-wrap gap-4 justify-center md:justify-start mb-4">
            {{#if location}}
              <div class="badge badge-outline gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                {{location}}
              </div>
            {{/if}}
          </div>

          <!-- Social Links -->
          <div class="flex flex-wrap gap-3 justify-center md:justify-start">
            {{#if twitter}}
              <a href="{{social_url type="twitter"}}" target="_blank" rel="noopener" class="btn btn-circle btn-sm btn-outline hover:btn-primary">
                {{> "icons/twitter"}}
              </a>
            {{/if}}
            {{#if facebook}}
              <a href="{{social_url type="facebook"}}" target="_blank" rel="noopener" class="btn btn-circle btn-sm btn-outline hover:btn-primary">
                {{> "icons/facebook"}}
              </a>
            {{/if}}
            {{#if linkedin}}
              <a href="{{social_url type="linkedin"}}" target="_blank" rel="noopener" class="btn btn-circle btn-sm btn-outline hover:btn-primary">
                {{> "icons/linkedin"}}
              </a>
            {{/if}}
            {{#if bluesky}}
              <a href="{{social_url type="bluesky"}}" target="_blank" rel="noopener" class="btn btn-circle btn-sm btn-outline hover:btn-primary">
                {{> "icons/bluesky"}}
              </a>
            {{/if}}
            {{#if threads}}
              <a href="{{social_url type="threads"}}" target="_blank" rel="noopener" class="btn btn-circle btn-sm btn-outline hover:btn-primary">
                {{> "icons/threads"}}
              </a>
            {{/if}}
            {{#if mastodon}}
              <a href="{{social_url type="mastodon"}}" target="_blank" rel="noopener" class="btn btn-circle btn-sm btn-outline hover:btn-primary">
                {{> "icons/mastodon"}}
              </a>
            {{/if}}
            {{#if tiktok}}
              <a href="{{social_url type="tiktok"}}" target="_blank" rel="noopener" class="btn btn-circle btn-sm btn-outline hover:btn-primary">
                {{> "icons/tiktok"}}
              </a>
            {{/if}}
            {{#if youtube}}
              <a href="{{social_url type="youtube"}}" target="_blank" rel="noopener" class="btn btn-circle btn-sm btn-outline hover:btn-primary">
                {{> "icons/youtube"}}
              </a>
            {{/if}}
            {{#if instagram}}
              <a href="{{social_url type="instagram"}}" target="_blank" rel="noopener" class="btn btn-circle btn-sm btn-outline hover:btn-primary">
                {{> "icons/instagram"}}
              </a>
            {{/if}}
          </div>
        </div>
      </div>
    </section>
  {{/author}}

  <!-- Divider -->

  <!-- Post List -->
  <div class="{{#if @custom.show_publication_info_sidebar}}grid grid-cols-1 lg:grid-cols-3 gap-8{{/if}}">
    <div class="{{#if @custom.show_publication_info_sidebar}}lg:col-span-2{{/if}}">
      {{> "components/post-list" feed="archive" postFeedStyle=@custom.post_feed_style showTitle=false showSidebar=@custom.show_publication_info_sidebar}}
    </div>
    
    {{#if @custom.show_publication_info_sidebar}}
      <div class="hidden lg:block">
        <div class="sticky top-8">
          <div class="card bg-base-200 shadow-lg">
            <div class="card-body">
              <h2 class="card-title">About the Author</h2>
              {{#author}}
                <p>{{bio}}</p>
                {{#if location}}
                  <div class="flex items-center gap-2 text-sm mt-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    <span>{{location}}</span>
                  </div>
                {{/if}}
              {{/author}}
              
              <div class="card-actions justify-end mt-4">
                {{#if website}}
                  <a href="{{website}}" class="btn btn-sm btn-primary" target="_blank" rel="noopener">Visit Website</a>
                {{/if}}
              </div>
            </div>
          </div>
        </div>
      </div>
    {{/if}}
  </div>
</main>