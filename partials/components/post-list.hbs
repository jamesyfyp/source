<div class="w-full">
  <div class="w-full lg:px-20 md:px-10 sm:px-0">
    <h2 class="text-2xl font-bold underline text-center p-4">
        Latest Posts
    </h2>
    <div class="flex flex-wrap gap-4 justify-center">
      {{#get "posts" include="authors" limit=12}}
          {{#foreach posts}}
              {{> "post-card" lazyLoad=true}}
          {{/foreach}}
      {{/get}}
    </div>
  </div>
</div>